<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="mari" id="1">

        <createTable tableName="user">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="phone" type="VARCHAR(45)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="mari" id="2">

        <createTable tableName="route">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="departure_time" type="VARCHAR(5)">
                <constraints nullable="false"/>
            </column>
            <column name="arrival_time" type="VARCHAR(5)">
                <constraints nullable="false"/>
            </column>
            <column name="departure_point" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="arrival_point" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="mari" id="3">

        <createTable tableName="passenger">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="route_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="departure_point" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="arrival_point" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="passenger"
                                 baseColumnNames="route_id"
                                 constraintName="fk_route_id"
                                 referencedTableName="route"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="passenger"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_id"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>

    </changeSet>

