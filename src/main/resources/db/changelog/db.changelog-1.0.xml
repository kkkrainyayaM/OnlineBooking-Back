<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="mari" id="1">

        <createTable tableName="user">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="phone" type="VARCHAR(45)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="mari" id="2">

        <createTable tableName="route">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="timeDeparture" type="VARCHAR(5)">
                <constraints nullable="false"/>
            </column>
            <column name="timeArrival" type="VARCHAR(5)">
                <constraints nullable="false"/>
            </column>
            <column name="pointDeparture" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="pointArrival" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="mari" id="3">

        <createTable tableName="rout_passengers">
            <column name="idRout" type="INT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="idUser" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="pointDeparture" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="pointArrival" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="rout_passengers"
                                 baseColumnNames="idUser"
                                 constraintName="fk_passenger_id"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="rout_passengers"
                                 baseColumnNames="idRout"
                                 constraintName="fk_rout_id"
                                 referencedTableName="rout"
                                 referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>